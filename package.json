{
  "name": "mappersmith",
  "version": "2.0.0",
  "description": "It is a lightweight, isomorphic, dependency-free, rest client mapper for javascript",
  "author": "Tulio Ornelas <ornelas.tulio@gmail.com>",
  "contributors": [
    "Daniel Alves <alves.lopes.dan@gmail.com>",
    "Roberto Soares <roberto.tech@gmail.com>"
  ],
  "main": "index.js",
  "scripts": {
    "test-browser": "NODE_ENV=test SINGLE_RUN=true ./node_modules/.bin/karma start karma.conf.js",
    "test-node": "NODE_ENV=test NODE_PATH=. JASMINE_CONFIG_PATH=spec/node/support/jasmine.json ./node_modules/.bin/babel-node ./node_modules/.bin/jasmine",
    "test-unit": "npm run test-browser && npm run test-node",
    "test-browser-integration": "NODE_ENV=test SINGLE_RUN=true ./node_modules/.bin/karma start spec/integration/browser/karma.conf.js",
    "test-node-integration": "NODE_ENV=test NODE_PATH=. JASMINE_CONFIG_PATH=spec/integration/node/support/jasmine.json ./node_modules/.bin/babel-node ./node_modules/.bin/jasmine",
    "test-integration": "npm run test-browser-integration && npm run test-node-integration",
    "test": "npm run build-node && npm run test-unit && npm run test-integration",
    "build-node": "./node_modules/.bin/babel src -d lib",
    "build-browser": "rm -rf dist/* && ./node_modules/.bin/webpack --config webpack.conf.js",
    "build": "npm run build-node && npm run build-browser"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tulios/mappersmith.git"
  },
  "keywords": [
    "rest",
    "client",
    "rest-client",
    "isomorphic",
    "browser",
    "server",
    "data-mapper",
    "mappersmith"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tulios/mappersmith/issues"
  },
  "homepage": "https://github.com/tulios/mappersmith",
  "tonicExampleFilename": "example.js",
  "browser": {
    "./lib/gateway/http.js": false
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.0",
    "babel-loader": "^6.2.7",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.18.0",
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "faux-jax-tulios": "^5.0.5",
    "jasmine": "^2.5.2",
    "jasmine-core": "^2.5.2",
    "karma": "^1.3.0",
    "karma-jasmine": "^1.0.2",
    "karma-phantomjs2-launcher": "^0.5.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "^0.0.26",
    "karma-webpack": "^1.8.0",
    "webpack": "^1.13.3"
  }
}
